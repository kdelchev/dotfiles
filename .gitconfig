[user]
  name = Konstantin Delchev
  email = konstantin.delchev@shore.com

[diff]
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  h = log --pretty=format:\"%h %Cgreen%ad%Creset %Cblue::%Creset %s%d %Cblue[%an]%Creset\" --graph --date=short -15 # thanks, @smanolloff (https://github.com/smanolloff)
  hh = !git r -1
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

[push]
  default = simple

[merge]
  tool = kdiff3
  ff = no

[core]
  excludesfile = /Users/kode/.gitignore
[credential]
  helper = osxkeychain
[difftool "sourcetree"]
  cmd = /opt/homebrew-cask/Caskroom/diffmerge/4.2.0.697/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
  path = 
[mergetool "sourcetree"]
  cmd = /opt/homebrew-cask/Caskroom/diffmerge/4.2.0.697/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
  trustExitCode = true
