[diff]
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  h = log --pretty=format:\"%h %Cgreen%ad%Creset %Cblue::%Creset %s%d %Cblue[%an]%Creset\" --graph --date=short -15 # thanks, @smanolloff (https://github.com/smanolloff)
  hh = !git r -1
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore # this is the global .gitignore

[credential]
  helper = osxkeychain

[merge]
  ff = no
  tool = kdiff3

[mergetool]
  keepBackup = false

[mergetool "kdiff3"]
  path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false

[diff]
  tool = kdiff3

[difftool]
  prompt = false

[difftool "kdiff3"]
  path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false
[rerere]
	enabled = true
